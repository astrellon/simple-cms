{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "ESNext",
        "noEmitOnError": true,
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "inlineSources": true,
